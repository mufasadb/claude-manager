# Claude Manager Environment Configuration
# Copy this file to .env and fill in your values

# Core Service URLs - Centralized Configuration
OLLAMA_SERVICE_URL=http://localhost:11434
TTS_SERVICE_URL=http://localhost:8080

# Service Configuration
OLLAMA_TIMEOUT=60000
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_DELAY=1000

TTS_TIMEOUT=30000
TTS_MAX_RETRIES=3
TTS_RETRY_DELAY=1000

# AI & Language Models
OPENROUTER_API_KEY=sk-or-your_openrouter_api_key

# Optional: Override default localhost URLs for remote services
# OLLAMA_SERVICE_URL=http://your-ollama-server:11434
# TTS_SERVICE_URL=http://your-tts-server:8080

# Development Mode
NODE_ENV=development